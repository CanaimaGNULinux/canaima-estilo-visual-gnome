#!/bin/sh -e

#
# canaima-estilo-visual.postrm
#   (C) 2008 José Miguel Parrella Romero <jparrella@onuva.com>
#
# Esto es Software Libre bajo la Licencia Pública General GNU
#

PKG="canaima-estilo-visual"


case "$1" in
  upgrade)
    for archivo in /usr/share/applications/thunderbird.desktop /usr/share/applications/gnome-btdownload.desktop /usr/share/applications/ekiga.desktop /usr/share/applications/openproj.desktop /usr/share/applications/pidgin.desktop /usr/share/applications/scribus.desktop /usr/share/applications/vlc.desktop /usr/share/applications/amsn.desktop /usr/share/applications/freemind.desktop /usr/share/applications/gtkpod.desktop /usr/share/applications/planner.desktop /usr/share/applications/cheese.desktop /etc/default/grub /etc/grub.d/10_linux /etc/grub.d/05_debian_theme /usr/share/applications/winecfg.desktop /usr/share/applications/htop.desktop /usr/share/applications/xscreensaver.desktop /usr/share/applications/gparted.desktop /usr/lib/mime/packages/openoffice.org-writer /usr/lib/mime/packages/openoffice.org-calc /usr/lib/mime/packages/openoffice.org-impress /usr/share/applications/uninstaller.desktop /usr/share/applications/dia-common.desktop /usr/share/themes/Clearlooks/gtk-2.0/gtkrc /usr/share/splashy/themes/canaima/suspend.png /usr/share/splashy/themes/canaima/background.png /usr/share/splashy/themes/canaima/error.png /usr/share/applications/openoffice.org-base.desktop /usr/share/applications/openoffice.org-draw.desktop /usr/share/applications/openoffice.org-math.desktop /usr/share/applications/openoffice.org-calc.desktop /usr/share/applications/openoffice.org-calc.desktop /usr/share/applications/openoffice.org-impress.desktop /usr/share/applications/openoffice.org-writer.desktop

    do
	if [ -e $archivo ] 
	then
	      BASE=`basename $archivo`
	      dpkg-divert --package $PKG --remove --rename \
	                  --divert /var/lib/$PKG/diverts/$BASE $archivo
	fi
    done


  ;;
esac
